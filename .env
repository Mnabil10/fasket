# DB
DATABASE_URL=postgresql://fasket:fasket@localhost:5432/fasket?schema=public

# Auth
JWT_ACCESS_SECRET=change-me
JWT_REFRESH_SECRET=change-me-too
JWT_ACCESS_TTL=900
JWT_REFRESH_TTL=1209600

# App
PORT=4000
NODE_ENV=development
API_PREFIX=api/v1
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Uploads driver: 's3' or 'local'
UPLOADS_DRIVER=local

# Local disk uploads
UPLOADS_DIR=uploads
LOCAL_UPLOADS_BASE_URL=http://127.0.0.1:4000/uploads

# S3 / MinIO (set when using S3)
# If using AWS S3, clear S3_ENDPOINT and set real AWS creds/region instead.
S3_ENDPOINT=
S3_REGION=
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_BUCKET=
S3_PUBLIC_BASE_URL=

S3_FORCE_PATH_STYLE=true                       # true=MinIO/R2/compat, false=AWS

# Security / limits
UPLOAD_MAX_BYTES=10485760                      # 10 MB
UPLOAD_ALLOWED_MIME=image/jpeg,image/png,image/webp
UPLOAD_PRESIGN_TTL=300                         # seconds
