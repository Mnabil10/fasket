# Database
DATABASE_URL=postgresql://fasket:fasket@localhost:5432/fasket?schema=public

# Authentication
JWT_ACCESS_SECRET=super-strong-access-secret-please-change
JWT_REFRESH_SECRET=super-strong-refresh-secret-please-change
JWT_ACCESS_TTL=900
JWT_REFRESH_TTL=1209600

# API / Server
PORT=4000
NODE_ENV=development
API_PREFIX=api                      # Prefix only; version (/v1) is added automatically
ENFORCE_HTTPS=false
ALLOWED_ORIGINS=https://admin.fasket.cloud,regex:^https?://localhost:\\d+$
# Legacy name still accepted:
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5174,http://127.0.0.1:5174,http://localhost:8100


# Rate limiting & brute-force protection
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100
AUTH_BRUTE_TTL=300
AUTH_BRUTE_MAX=5

# Cache / Redis
REDIS_ENABLED=true
REDIS_URL=redis://localhost:6379
CACHE_DEFAULT_TTL=60
CATEGORIES_CACHE_TTL=60
PRODUCT_LIST_CACHE_TTL=60
HOME_CACHE_TTL=120
BULK_PRODUCT_BATCH_SIZE=25

# Uploads & media
UPLOADS_DRIVER=s3  # s3 | local | inline
UPLOADS_DIR=uploads
UPLOAD_ALLOWED_MIME=image/jpeg,image/png,image/webp
UPLOAD_MAX_BYTES=10485760
S3_BUCKET=fasket
S3_REGION=us-east-1
S3_PUBLIC_BASE_URL=
S3_ACCESS_KEY_ID=xxx
S3_SECRET_ACCESS_KEY=yyy
S3_SSE=
LOCAL_UPLOADS_BASE_URL=/uploads
# Optional base URL for serving local uploads: http://localhost:4000/uploads

# Observability
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.2
SENTRY_PROFILES_SAMPLE_RATE=0.2
SWAGGER_ENABLED=false
SWAGGER_BASIC_USER=
SWAGGER_BASIC_PASS=
